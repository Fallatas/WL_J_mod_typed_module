<extension type="module" version="3.5.0" method="upgrade">
    <name>mod_wl_typed_module</name>
    <creationDate>17.10.2019</creationDate>
    <author>Thomas Winterling</author>
    <authorEmail>info@winterling-labs.com</authorEmail>
    <authorUrl>https://www.winterling-labs.com</authorUrl>
    <copyright>Copyright (C) 2005 - 2019. All rights reserved.</copyright>
    <license>GNU/GPLv2 only</license>
    <version>1.0.0</version>
    <description>MOD_WL_TYPED_MODULE_XML_DESCRIPTION</description>

    <files>
        <filename module="mod_wl_typed_module">mod_wl_typed_module.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">

            <field
                        name="Elementtype"
                        type="list"
                        default="'1000"
                        label="Elementtyp"
                        description="Bitte wählen Sie den Typ des Inhaltselement aus.">
                    <option value="1000">Animierter Text</option>
                    <option value="2000">normaler Text</option>
                </field>

                <field name="id"
                       type="text"
                       default="ID wählen"
                       label="Eindeutige ID"
                       description="Bitte wählen Sie eine ID aus."
                       size="10"
                />


                <field
                        name="fontsize"
                        type="integer"
                        default="20"
                        label="Schriftgröße wählen"
                        description="Bitte wählen Sie eine Schriftgröße aus."
                        first="20"
                        last="60"
                        step="10"
                />

            </fieldset>    
        </fields>
    </config>

    <languages folder="language">
        <language tag="de-DE">de-DE/de-DE.mod_wl_typed_module.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_wl_typed_module.sys.ini</language>
    </languages>

    <media destination="mod_wl_typed_module" folder="media">
        <folder>css</folder>
        <folder>js</folder>
    </media>
    
</extension>