<extension type="module" version="3.5.0" method="upgrade">
    <name>mod_wl_typed_module</name>
    <creationDate>17.10.2019</creationDate>
    <author>Thomas Winterling</author>
    <authorEmail>info@winterling-labs.com</authorEmail>
    <authorUrl>https://www.winterling-labs.com</authorUrl>
    <copyright>Copyright (C) 2005 - 2019. All rights reserved.</copyright>
    <license>GNU/GPLv2 only</license>
    <version>1.0.0</version>
    <description>MOD_WL_TYPED_MODULE_XML_DESCRIPTION</description>

    <files>
        <filename module="mod_wl_typed_module">mod_wl_typed_module.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">

            <field
                        name="Elementtype"
                        type="list"
                        default="'1000"
                        label="MOD_WL_TYPED_MODULE_ELEMENTTYPE_LABEL"
                        description="MOD_WL_TYPED_MODULE_ELEMENTTYP_DESC">
                    <option value="1000">Animierter Text</option>
                    <option value="2000">normaler Text</option>
                </field>

                <field name="id"
                       type="text"
                       default="ID wÃ¤hlen"
                       label="MOD_WL_TYPED_MODULE_ID_LABEL"
                       description="MOD_WL_TYPED_MODULE_ID_DESC"
                       size="10"
                />

                <field
                        name="fontsize"
                        type="integer"
                        default="20"
                        label="MOD_WL_TYPED_MODULE_FONTSIZE_LABEL"
                        description="MOD_WL_TYPED_MODULE_FONTSIZE_DESC"
                        first="20"
                        last="60"
                        step="10"
                />


                <field type="spacer" name="spacer_gdpr_end" label="MOD_WL_TYPED_MODULE_MSGWORDS" />

                <field name="firstwords"
                       type="text"
                       default=""
                       label="MOD_WL_TYPED_MODULE_FIRSTWORDS_LABEL"
                       description="MOD_WL_TYPED_MODULE_FIRSTWORDS_DESC"
                       size="10"
                />

                <field name="secondwords"
                       type="text"
                       default=""
                       label="MOD_WL_TYPED_MODULE_SECONDWORDS_LABEL"
                       description="MOD_WL_TYPED_MODULE_SECONDWORDS_DESC"
                       size="10"
                />

                <field name="thirdwords"
                       type="text"
                       default=""
                       label="MOD_WL_TYPED_MODULE_THIRDWORDS_LABEL"
                       description="MOD_WL_TYPED_MODULE_THIRDWORDS_DESC"
                       size="10"
                />


                <field type="spacer" name="spacer" label="&lt;hr/&gt;" />

                <!-- Speed -->

                <field
                        name="fontspeed"
                        type="integer"
                        default="1"
                        label="MOD_WL_TYPED_MODULE_FONTSPEED_LABEL"
                        description="MOD_WL_TYPED_MODULE_FONTSPEED_DESC."
                        first="1"
                        last="10"
                        step="1"
                />

                <field
                        name="timestart"
                        type="integer"
                        default="1"
                        label="MOD_WL_TYPED_MODULE_TIMESTART_LABEL"
                        description="MOD_WL_TYPED_MODULE_TIMESTART_DESC"
                        first="1"
                        last="10"
                        step="1"
                />

                <field
                        name="timeback"
                        type="integer"
                        default="1"
                        label="MOD_WL_TYPED_MODULE_TIMEBACK_LABEL"
                        description="MOD_WL_TYPED_MODULE_TIMEBACK_DESC"
                        first="1"
                        last="10"
                        step="1"
                />

                <field type="spacer" name="spacer" label="&lt;hr/&gt;" />

                <!-- loops -->

                <field
                        name="loop"
                        type="radio"
                        default="1"
                        label="MOD_WL_TYPED_MODULE_LOOP_LABEL"
                        description="MOD_WL_TYPED_MODULE_LOOP_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="loopcount"
                        type="integer"
                        default="2"
                        label="MOD_WL_TYPED_MODULE_LOOPCOUNT_LABEL"
                        description="MOD_WL_TYPED_MODULE_LOOPCOUNT_DESC"
                        first="1"
                        last="10"
                        step="1"
                />

                <field type="spacer" name="spacer" label="&lt;hr/&gt;" />

                <!-- cursor -->

                <field
                        name="cursor"
                        type="radio"
                        default="1"
                        label="MOD_WL_TYPED_MODULE_CURSOR_LABEL"
                        description="MOD_WL_TYPED_MODULE_CURSOR_DESC"
                        class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

            </fieldset>    
        </fields>
    </config>

    <languages folder="language">
        <language tag="de-DE">de-DE/de-DE.mod_wl_typed_module.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_wl_typed_module.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_wl_typed_module.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_wl_typed_module.sys.ini</language>
    </languages>

    <media destination="mod_wl_typed_module" folder="media">
        <folder>css</folder>
        <folder>js</folder>
    </media>
    
</extension>